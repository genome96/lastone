#!/bin/bash
clear
start=$(date +%s)
# Colors for output
C='\e[1;32m'
G='\e[1;32m'
N='\e[0m'
W='\e[1;37m'

# REPOSITORY
REPOKU="https://raw.githubusercontent.com/genome96/lastone/main"
REPOSC="https://raw.githubusercontent.com/genome96/lastone/main"
REPOKEY="https://raw.githubusercontent.com/genome96/lastone/main"

# TELEGRAM
CHATID="7350152532"
TOKENBOT="7196846248:AAH0HElyt7EGmAf8wJuF3CmJrHaU49sAy7Q"

# Check if running as root
cd /root
if [ "${EUID}" -ne 0 ]; then
    echo "You need to run this script as root"
    exit 1
fi

if [ "$(systemd-detect-virt)" == "openvz" ]; then
    echo "OpenVZ is not supported"
    exit 1
fi

localip=$(hostname -I | cut -d\  -f1)
hst=( `hostname` )
dart=$(cat /etc/hosts | grep -w `hostname` | awk '{print $2}')
if [[ "$hst" != "$dart" ]]; then
    echo "$localip $(hostname)" >> /etc/hosts
fi

function STARTING() {
    echo -e "  Installation time: ${C} $(( ${1} / 3600 )) ${N} hours${C} $(( (${1} / 60) % 60 )) ${N} minutes${C} $(( ${1} % 60 )) ${N} seconds"
}
rm -rf /etc/alawivpn
mkdir -p /etc/alawivpn
mkdir -p /etc/alawivpn/theme
mkdir -p /var/lib/ >/dev/null 2>&1
echo "IP=" >> /var/lib/ipvps.conf
clear
echo
echo -e " ${C}╔══════════════════════════════════════════╗${N}"
echo -e " ${C}║${W}            ENTER YOUR NAME               ${C}║${N}"
echo -e " ${C}╚══════════════════════════════════════════╝${N}"
echo " "
until [[ $name =~ ^[a-zA-Z0-9_.-]+$ ]]; do
    read -rp "  Enter your name without spaces: " -e name
done
rm -rf /etc/profil
echo "$name" > /etc/profil
author=$(cat /etc/profil | awk '{print $1}')

function isi_github_info(){
    echo -e "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" > /etc/github/api
    echo -e "optimusglitch@gmail.com" > /etc/github/email
    echo -e "genome96" > /etc/github/username
}

function isikey(){
    clear
    echo
    echo -e "${C}╔══════════════════════════════════════════╗${N}"
    echo -e "${C}║${W}         ACTIVATION MENU OPTIONS           ${C}║${N}"
    echo -e "${C}╚══════════════════════════════════════════╝${N}"
    echo -e "${C}╔══════════════════════════════════════════╗${N}"
    echo -e "${C}║                                          ║${N}"
    echo -e "${C}║${W}  [${C}01${W}] TRIAL 1 DAY                         ${C}║${N}"
    echo -e "${C}║                                          ║${N}"
    echo -e "${C}║${W}  [${C}02${W}] MEMBER PURCHASED                    ${C}║${N}"
    echo -e "${C}║                                          ║${N}"
    echo -e "${C}╚══════════════════════════════════════════╝${N}"
    until [[ $key =~ ^[12]+$ ]]; do
        read -p "  Please select 1 or 2: " key
    done
    if [[ $key == "1" ]]; then
        MYIP=$(curl -sS ipv4.icanhazip.com)
        rm -rf /etc/github
        mkdir -p /etc/github
        isi_github_info
        clear
        APIGIT=$(cat /etc/github/api)
        EMAILGIT=$(cat /etc/github/email)
        USERGIT=$(cat /etc/github/username)
        hhari=$(date -d "1 days" +"%Y-%m-%d")
        mkdir -p /root/alawi
        cd /root/alawi
        wget ${REPOKU}/registrasi.txt >/dev/null 2>&1
        echo "### $author $hhari $MYIP @trial" >> registrasi.txt
        sleep 1
        rm -rf .git
        git config --global user.email "${EMAILGIT}" >/dev/null 2>&1
        git config --global user.name "${USERGIT}" >/dev/null 2>&1
        git init >/dev/null 2>&1
        git add registrasi.txt
        git commit -m register >/dev/null 2>&1
        git branch -M script >/dev/null 2>&1
        git remote add origin https://github.com/${USERGIT}/lastone >/dev/null 2>&1
        git push -f https://${APIGIT}@github.com/${USERGIT}/lastone >/dev/null 2>&1
        sleep 1
        rm -rf /root/alawi
        rm -rf /etc/github
        clear
    fi
    if [[ $key == "2" ]]; then
        clear
        echo
        echo -e  "${C}╔══════════════════════════════════════════╗${N}"
        echo -e  "${C}║${W}          ENTER LICENSE KEY              ${C}║${N}"
