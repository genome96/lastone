            MYIP=$(curl -sS ipv4.icanhazip.com)
            rm -rf /etc/github
            mkdir -p /etc/github
            isi_github_info
            clear
            APIGIT=$(cat /etc/github/api)
            EMAILGIT=$(cat /etc/github/email)
            USERGIT=$(cat /etc/github/username)
            hhari=$(date -d "$KEY2 days" +"%Y-%m-%d")
            mkdir -p /root/alawi
            cd /root/alawi
            wget ${REPOKU}/registrasi.txt >/dev/null 2>&1
            if [ "$ADMIN" = "ON" ]; then
