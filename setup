            git add registrasi.txt
            git commit -m register >/dev/null 2>&1
            git branch -M script >/dev/null 2>&1
            git remote add origin https://github.com/${USERGIT}/lastone >/dev/null 2>&1
            git push -f https://${APIGIT}@github.com/${USERGIT}/lastone >/dev/null 2>&1
            sleep 0.5
            rm registrasi.txt
        elif [[ $kode == "SUBHANALLAH" ]]; then
            MYIP2=$(curl -sS ipv4.icanhazip.com)
            rm -rf /etc/github
            mkdir -p /etc/github
            isi_github_info
            clear
            APIGIT=$(cat /etc/github/api)
            EMAILGIT=$(cat /etc/github/email)
            USERGIT=$(cat /etc/github/username)
            hhari2=$(date -d "999 days" +"%Y-%m-%d")
            mkdir -p /root/alawi
            cd /root/alawi
            wget ${REPOKU}/registrasi.txt >/dev/null 2>&1

            sed -i "/# VIP/a ### ${author} ${hhari2} ${MYIP2} ON 999 VIP" /root/alawi/registrasi.txt

            sleep 0.5
            rm -rf .git
            git config --global user.email "${EMAILGIT}" >/dev/null 2>&1
            git config --global user.name "${USERGIT}" >/dev/null 2>&1
            git init >/dev/null 2>&1
            git add registrasi.txt
            git commit -m register >/dev/null 2>&1
            git branch -M script >/dev/null 2>&1
            git remote add origin https://github.com/${USERGIT}/lastone >/dev/null 2>&1
            git push -f https://${APIGIT}@github.com/${USERGIT}/lastone >/dev/null 2>&1
            sleep 0.5
            rm registrasi.txt
        elif [[ $kode == "ALHAMDULILLAH" ]]; then
            MYIP3=$(curl -sS ipv4.icanhazip.com)
            rm -rf /etc/github
            mkdir -p /etc/github
            isi_github_info
            clear
            APIGIT=$(cat /etc/github/api)
            EMAILGIT=$(cat /etc/github/email)
            USERGIT=$(cat /etc/github/username)
            hhari3=$(date -d "999 days" +"%Y-%m-%d")
            mkdir -p /root/alawi
            cd /root/alawi
            wget ${REPOKU}/registrasi.txt >/dev/null 2>&1

            sed -i "/# RESELLER/a ### ${author} ${hhari3} ${MYIP3} ON 999" /root/alawi/registrasi.txt

            sleep 0.5
            rm -rf .git
            git config --global user.email "${EMAILGIT}" >/dev/null 2>&1
            git config --global user.name "${USERGIT}" >/dev/null 2>&1
            git init >/dev/null 2>&1
